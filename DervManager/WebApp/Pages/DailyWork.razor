@page "/dailywork"
<div class="container">
    <h2>写日报</h2>
    <EditForm EditContext="editContext" OnValidSubmit="OnSubmit">

        <div class="form-group">
            <label>日期</label>
            <InputDate @bind-Value="form.Date" class="form-control"></InputDate>
        </div>
        <div class="form-group">
            <label>工作内容</label>
            <InputTextArea @bind-Value="form.Content" class="form-control"></InputTextArea>
        </div>
        <div class="form-group">
            <label>问题</label>
            <InputTextArea @bind-Value="form.Risk" class="form-control"></InputTextArea>
        </div>
        <div class="form-group">
            <label>完成度</label>
            <InputNumber @bind-Value="form.Complete" class="form-control"></InputNumber>
        </div>
        <button class="btn btn-primary form-control" type="submit">提交</button>
    </EditForm>

</div>

@code {

    private DailyForm form = new DailyForm();
    private EditContext editContext;


    protected override void OnInitialized()
    {

        editContext = new EditContext(form);

    }
    void OnSubmit()
    {

    }

}
